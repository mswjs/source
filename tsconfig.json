{
  "compilerOptions": {
    "strict": true,
    "allowJs": false,
    "moduleResolution": "node",
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": false,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "outDir": "lib",
    "declaration": true,
    "declarationDir": "lib",
    "baseUrl": "./",
    "paths": {
      "src/*": ["src/*"],
      "test/*": ["test/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
